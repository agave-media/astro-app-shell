---
export interface Props {
	title: string;
	subtitle: string;
	href: string;
}

const { href } = Astro.props;
---

<section>
	<img class="overlay" src={href} />
	
    <div class="content prose sm:prose-lg md:prose-xl lg:prose-2xl dark:prose-invert">
		<div class="header-image">
            <img src="https://firebasestorage.googleapis.com/v0/b/serial-mtb-texcoco.appspot.com/o/logos%2Fcalendariomtb.png?alt=media&token=dd0c1255-22d5-4409-af0d-0ce6aa9329db">
        </div>

        <md-filled-button label="Ver fechas"></md-filled-button>
	</div>
</section>

<style>
	section {
		text-align: center;
        position: relative;
        height: 350px;

        display: flex;
        flex-direction: column;
	}

	img.overlay {
		position: absolute;
		left: 0;
		top: 0;
		height: 100% !important;
		width: 100%;
		object-fit: cover;
        border-radius: 24px;
        object-position: top;
	}

    img.header-image {
        height: 180px;
    }

	.content {
		display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
		
        height: 100%;
		padding: 16px;
		box-sizing: border-box;
        margin: auto;
	}

	.content > * {
		z-index: 1;
	}

    h1 {
        margin: 0 !important;
    }
</style>

<script>
    import '@material/web/button/elevated-button'
    import '@material/web/button/filled-button'
</script>
